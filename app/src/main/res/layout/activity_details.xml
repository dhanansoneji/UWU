<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center_vertical">

                <!--<com.mikhaellopez.circularimageview.CircularImageView-->
                <!--android:id="@+id/prj_icon"-->
                <!--android:layout_width="@dimen/_30sdp"-->
                <!--android:layout_height="@dimen/_30sdp"-->
                <!--android:src="@drawable/uwu_logo"-->
                <!--app:civ_border_color="#000"-->
                <!--app:civ_border_width="1dp"/>-->

                <ImageView
                    android:id="@+id/prj_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/uwu_logo"/>

                <TextView
                    android:id="@+id/prj_name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhananjay"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end">

                    <LinearLayout
                        android:id="@+id/android_linear"
                        android:paddingVertical="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@drawable/link_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_ios"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@drawable/link_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ios"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IOS"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<android.support.v4.view.ViewPager-->
            <!--android:layout_marginHorizontal="@dimen/_5sdp"-->
            <!--android:id="@+id/viewPagerImage"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_200sdp">-->

            <!--</android.support.v4.view.ViewPager>-->

            <com.tmall.ultraviewpager.UltraViewPager
                android:id="@+id/ultra_viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerInParent="true"/>

            <android.support.v7.widget.RecyclerView
                android:visibility="invisible"
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_200sdp"
                android:scrollbars="horizontal">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bluejamesbond.text.DocumentView
                android:id="@+id/des"
                xmlns:ext="http://schemas.android.com/apk/res-auto"
                ext:documentView_insetPaddingTop="@dimen/_5sdp"
                ext:documentView_insetPaddingLeft="@dimen/_7sdp"
                ext:documentView_insetPaddingRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ext:documentView_text="An application can be self-contained or a group of programs. The program is a set of operations that runs the application for the user. Examples of applications include word processors, database programs, web browsers, development tools, image editors and communication platforms."
                ext:documentView_textColor="@color/text_colour"
                ext:documentView_textSize="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="lmm.intern.qrioustech.uwu.Fregment.ContactUsFragment"
    android:windowSoftInputMode="adjustResize|stateHidden"
    android:background="@color/background_all">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:gravity="bottom|left"
                    android:paddingBottom="@dimen/_2sdp">

                    <com.hbb20.CountryCodePicker
                        app:ccp_textSize="@dimen/_12sdp"
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccpDialog_keyboardAutoPopup="false"
                        app:ccp_defaultNameCode="US"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phone_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:paddingLeft="@dimen/_5sdp"
                            android:id="@+id/phone_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textSize="@dimen/_12sdp"
                            android:ellipsize="end"
                            android:scrollHorizontally="false"
                            android:singleLine="true"
                            android:inputType="number"/>


                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ques_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ques_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="@dimen/_12sdp"
                        android:scrollHorizontally="false"
                        android:singleLine="false"
                        android:hint="Your Question"
                        android:lines="5"
                        android:maxLines="5"
                        android:maxLength="255"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|bottom"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:background="@drawable/contact_btn"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
